{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storeType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "vmADDS1Name": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "adds01"
    },
    "vmADDS1AdminUserName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "admgdu"
    },
    "vmADDS1AdminPassword": {
      "type": "securestring"
    },
    "vmADDS1WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "vmADDS1Nic_PIPDnsName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "adds1"
    },
    "frontEndNSGName": {
      "type": "string",
      "defaultValue": "NSG-FrontEnd",
      "metadata": {
        "description": "Name for the NSG used to allow remote RDP"
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "NSG-FrontEnd",
      "metadata": {
        "description": "Name for the NSG used to allow remote RDP"
      }
    }


  },
  "variables": {
    "vnet_infraPrefix": "10.0.0.0/16",
    "vnet_infraSubnet1Name": "Subnet-ADDS",
    "vnet_infraSubnet1Prefix": "10.0.1.0/24",
    "vnet_infraSubnet2Name": "Subnet-ADFS",
    "vnet_infraSubnet2Prefix": "10.0.2.0/24",
    "storeName": "[concat('store', uniqueString(resourceGroup().id))]",
    "vmADDS1ImagePublisher": "MicrosoftWindowsServer",
    "vmADDS1ImageOffer": "WindowsServer",
    "vmADDS1OSDiskName": "vmADDS1OSDisk",
    "vmADDS1VmSize": "Standard_D1",
    "vmADDS1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet_infra')]",
    "vmADDS1SubnetRef": "[concat(variables('vmADDS1VnetID'), '/subnets/', variables('vnet_infraSubnet1Name'))]",
    "vmADDS1StorageAccountContainerName": "vhds",
    "vmADDS1NicName": "[concat(parameters('vmADDS1Name'), 'NetworkInterface')]",
    "vmADDS1Nic_PIPName": "vmADDS1Nic_PIP"
  },
  "resources": [
    {
      "name": "vnet_infra",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('frontEndNSGName'))]"
      ],
      "tags": {
        "displayName": "vnet_infra"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnet_infraPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vnet_infraSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('vnet_infraSubnet1Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('frontEndNSGName'))]"
              }
            }},
          {
            "name": "[variables('vnet_infraSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('vnet_infraSubnet2Prefix')]"
            }
          }
        ],
        "displayName": "VNet"
      }
    },
    {
      "name": "[variables('storeName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "store"
      },
      "properties": {
        "accountType": "[parameters('storeType')]"
      }
    },
    {
      "name": "[variables('vmADDS1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', 'vnet_infra')]",
        "[concat('Microsoft.Network/publicIPAddresses/', variables('vmADDS1Nic_PIPName'))]"
      ],
      "tags": {
        "displayName": "vmADDS1Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('vmADDS1SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmADDS1Nic_PIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('vmADDS1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('storeName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('vmADDS1NicName'))]"
      ],
      "tags": {
        "displayName": "vmADDS1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vmADDS1VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmADDS1Name')]",
          "adminUsername": "[parameters('vmADDS1AdminUsername')]",
          "adminPassword": "[parameters('vmADDS1AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('vmADDS1ImagePublisher')]",
            "offer": "[variables('vmADDS1ImageOffer')]",
            "sku": "[parameters('vmADDS1WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "vmADDS1OSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('storeName'), '.blob.core.windows.net/', variables('vmADDS1StorageAccountContainerName'), '/', variables('vmADDS1OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmADDS1NicName'))]"
            }
          ]
        }
      }
    },
    {
      "name": "[variables('vmADDS1Nic_PIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "vmADDS1Nic_PIP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('vmADDS1Nic_PIPDnsName')]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('frontEndNSGName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NSG-FrontEnd"
      },
      "properties": {
        "securityRules": [
          {
            "name": "rdp-rule",
            "properties": {
              "description": "Allow RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    }
   
      
      ]
    }