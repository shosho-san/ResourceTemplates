{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sdfType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        },
        "sdfName": {
            "type": "string",
            "minLength": 1
        },
        "sdfAdminUserName": {
            "type": "string",
            "minLength": 1
        },
        "sdfAdminPassword": {
            "type": "securestring"
        },
        "sdfWindowsOSVersion": {
            "type": "string",
            "defaultValue": "2012-R2-Datacenter",
            "allowedValues": [
                "2008-R2-SP1",
                "2012-Datacenter",
                "2012-R2-Datacenter",
                "Windows-Server-Technical-Preview"
            ]
        }
    },
    "variables": {
        "sdfName": "[concat('sdf', uniqueString(resourceGroup().id))]",
        "sdfPrefix": "10.0.0.0/16",
        "sdfSubnet1Name": "Subnet-1",
        "sdfSubnet1Prefix": "10.0.0.0/24",
        "sdfSubnet2Name": "Subnet-2",
        "sdfSubnet2Prefix": "10.0.1.0/24",
        "sdfImagePublisher": "MicrosoftWindowsServer",
        "sdfImageOffer": "WindowsServer",
        "sdfOSDiskName": "sdfOSDisk",
        "sdfVmSize": "Standard_D1",
        "sdfVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'sdf')]",
        "sdfSubnetRef": "[concat(variables('sdfVnetID'), '/subnets/', variables('sdfSubnet1Name'))]",
        "sdfStorageAccountContainerName": "vhds",
        "sdfNicName": "[concat(parameters('sdfName'), 'NetworkInterface')]"
    },
    "resources": [
        {
            "name": "[variables('sdfName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "sdf"
            },
            "properties": {
                "accountType": "[parameters('sdfType')]"
            }
        },
        {
            "name": "sdf",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "sdf"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('sdfPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('sdfSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('sdfSubnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('sdfSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('sdfSubnet2Prefix')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('sdfNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', 'sdf')]"
            ],
            "tags": {
                "displayName": "sdfNic"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('sdfSubnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('sdfName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('sdfName'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('sdfNicName'))]"
            ],
            "tags": {
                "displayName": "sdf"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('sdfVmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('sdfName')]",
                    "adminUsername": "[parameters('sdfAdminUsername')]",
                    "adminPassword": "[parameters('sdfAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('sdfImagePublisher')]",
                        "offer": "[variables('sdfImageOffer')]",
                        "sku": "[parameters('sdfWindowsOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "sdfOSDisk",
                        "vhd": {
                            "uri": "[concat('http://', variables('sdfName'), '.blob.core.windows.net/', variables('sdfStorageAccountContainerName'), '/', variables('sdfOSDiskName'), '.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('sdfNicName'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
    }
}
